{
	// various editor settings
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": true
	},
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"explorer.autoReveal": false,
	"workbench.startupEditor": "none",
	"explorer.compactFolders": false,

	// astro configuration
	"prettier.documentSelectors": ["**/*.astro"],
	"[astro]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	// eslint project settings
	"eslint.workingDirectories": ["./app", "./backend"],

	// inline fold & tailwind intellisense support
	"inlineFold.supportedLanguages": ["astro"],
	"editor.quickSuggestions": {
		"strings": true
	},

	// typescript configuration
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"[typescriptreact]": {
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
	},
	"eslint.validate": ["typescript"],
	"typescript.updateImportsOnFileMove.enabled": "always",
	"emmet.includeLanguages": {
		"typescript": "typescriptreact"
	},

	// vscode explorer file nesting
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		"README.md": "SECURITY.md,LICENSE",
		"package.json": "tsconfig.json,.editorconfig,.gitignore",
		"astro.config.mjs": "tailwind.config.cjs"
	}
}
